<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to 'All Courses', courses_path %></li>
    <li class="breadcrumb-item active" aria-current="page"><%= @course.title %></li>
  </ol>
</nav>
<div class="container">
  <h1><%= @course.title %></h1>
  <p><%= @course.description %></p>

  <h2>Lessons</h2>
  <ul>
    <% @course.lessons.each do |lesson| %>
      <li><%= link_to lesson.title, course_lesson_path(@course, lesson) %></li>
    <% end %>
  </ul>

  <div class="mt-4">
  <!-- Add Lesson Button (only for course creators) -->
  <% if can?(:manage, Lesson.new(course: @course)) %>
    <%= link_to 'Add Lesson', new_course_lesson_path(@course), class: 'btn btn-primary' %>
  <% end %>

  <!-- Edit Course Button (only for the course creator) -->
  <% if can?(:update, @course) && @course.user_id == current_user.id %>
    <%= link_to 'Edit Course', edit_course_path(@course), class: 'btn btn-secondary' %>
  <% end %>

  <!-- Delete Course Button (only for the course creator) -->
  <% if can?(:destroy, @course) && @course.user_id == current_user.id %>
    <%= button_to 'Delete Course', course_path(@course), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
  <% end %>
</div>
</div>
